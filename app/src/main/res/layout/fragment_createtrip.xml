<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_create_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.createTrip.CreateTripFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Trip Title -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_trip_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Trip Title"
            app:boxBackgroundMode="none"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_trip_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:background="@null"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date Range Picker -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_date_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Select Date Range"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_calendar"
            app:boxBackgroundMode="none"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_trip_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_date_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:background="@null"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Location Search Box -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Location"
            app:boxBackgroundMode="none"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_date_range"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <AutoCompleteTextView
                android:id="@+id/editText_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:drawableRight="@drawable/ic_search"
                android:background="@null"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Remarks -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_remarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Remarks"
            app:boxBackgroundMode="none"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText_remarks"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"
                android:background="@null"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit_trip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_remarks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel_trip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/button_submit_trip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
