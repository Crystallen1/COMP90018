<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MapView 显示地图 -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 顶部左侧的日期显示 -->
    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Date: 2024-10-09"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_gravity="top|start" />

    <!-- 顶部右侧的步数显示 -->
    <TextView
        android:id="@+id/textView_step_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Steps: 0"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_gravity="top|end" />

    <!-- 悬浮按钮的容器 -->
    <LinearLayout
        android:id="@+id/fab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="end|bottom"
        android:layout_gravity="end|bottom">

        <!-- 第一个悬浮按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_google_signin_btn_text_disabled"
            app:tint="@android:color/white"
            app:backgroundTint="@color/blue"
            android:contentDescription="Camera" />

        <!-- 第二个悬浮按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_google_signin_btn_icon_dark_focused"
            app:tint="@android:color/white"
            app:backgroundTint="@color/blue"
            android:layout_marginTop="16dp"
            android:contentDescription="Input Route" />

        <!-- 第三个悬浮按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_google_signin_btn_text_dark_focused"
            app:tint="@android:color/white"
            app:backgroundTint="@color/blue"
            android:layout_marginTop="16dp"
            android:contentDescription="Settings" />

    </LinearLayout>

    <!-- 底部的悬浮窗容器 -->
    <LinearLayout
        android:id="@+id/floating_info_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_background"
        android:padding="16dp"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <!-- 景点名称 -->
        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- 大概的游览时间 -->
        <TextView
            android:id="@+id/visit_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approximate Visit Time: 2 hours"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- 按钮容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <!-- Navigation 按钮 -->
            <Button
                android:id="@+id/button_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navigation"
                android:layout_marginEnd="8dp" />

            <!-- Detail 按钮 -->
            <Button
                android:id="@+id/button_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
